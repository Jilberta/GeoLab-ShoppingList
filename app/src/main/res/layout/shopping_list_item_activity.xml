                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/progress_bar_margin"
                    android:gravity="bottom"
                    android:text="100%"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>

